  "manifest_version": 3,
  "name": "LieBlocker",
  "version": "1.0.0",
  "description": "AI-powered fact-checking for YouTube videos",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "notifications"
  ],
